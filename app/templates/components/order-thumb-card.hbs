<div class="order-thumb-card__content">
  <div class="order-thumb-card__items">
    {{#if randomBurgers}}
    <span class="order-thumb-card__item">🍔{{randomBurgers}}</span>
    {{/if}}

    {{#if randomSides}}
    <span class="order-thumb-card__item">🍟{{randomSides}}</span>
    {{/if}}

    {{#if randomDrinks}}
    <span class="order-thumb-card__item">💧{{randomDrinks}}</span>
    {{/if}}
  </div>
</div>

<footer class="card-footer">
  <div class="card-footer-item order-thumb-card__slot-time">
    {{slotTime}}
  </div>

  <a class="card-footer-item order-thumb-card__customer order-thumb-card__customer--{{customerStatus}}">
    <i class="fas fa-user-circle"></i>
  </a>
</footer>
