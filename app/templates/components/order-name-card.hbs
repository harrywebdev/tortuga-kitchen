{{#if isSelected}}
  <div class="order-name-card__checkbox">
    <Input class="is-checkradio is-rtl is-circle" id="selectOrderCheckbox-{{element.id}}" type="checkbox" checked={{isSelected}} @click={{action "toggleSelection"}} />
    <label for="selectOrderCheckbox-{{element.id}}"></label>
  </div>
{{/if}}

<div class="order-name-card__content is-clearfix">
  <div class="columns is-marginless">
    <div class="column is-paddingless">
      <div class="order-name-card__customer order-name-card__customer--{{customerStatus}}">
        <i class="fas fa-user-circle"></i> Customer Name
      </div>
      <div class="order-name-card__pickup-time">Cas: {{orderTime}}</div>
    </div>
    <div class="column is-5 is-paddingless">
      <div class="order-name-card__items">
        {{#if randomBurgers}}
          <span class="order-name-card__item">🍔{{randomBurgers}}</span>
        {{/if}}

        {{#if randomSides}}
          <span class="order-name-card__item">🍟{{randomSides}}</span>
        {{/if}}

        {{#if randomDrinks}}
          <span class="order-name-card__item">💧{{randomDrinks}}</span>
        {{/if}}
      </div>
      <div class="order-name-card__total">600 Kč</div>
    </div>
  </div>
</div>
