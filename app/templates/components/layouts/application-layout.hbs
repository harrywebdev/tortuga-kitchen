  {{/if}}
  <SafeModeSwitch />
</div>

<div class="application-layout__full-screen-rows">
  <div class="application-layout__full-screen-row application-layout__full-screen-row--review">
    <div class="columns is-vcentered is-marginless">
      <div class="column is-narrow">
        <AcceptButton />
      </div>
      <div class="column is-paddingless application-layout__items">
        <div class="application-layout__items-list">
          <OrderThumbCard @pickupTime="18:15" />
          <OrderThumbCard @pickupTime="18:15" />
          <OrderThumbCard @pickupTime="18:15" />
          <OrderThumbCard @pickupTime="18:15" />
