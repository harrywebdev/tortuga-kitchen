          <OrderThumbCard @pickupTime="18:30" />
          <OrderThumbCard @pickupTime="18:45" />
          <OrderThumbCard @pickupTime="18:45" />
          <OrderThumbCard @pickupTime="18:45" />
        </div>
      </div>
    </div>
  </div>

  <div class="application-layout__full-screen-row application-layout__full-screen-row--workspace">
    <Layouts::TheGrill />
    <Layouts::PickupArea />
  </div>

  <div class="application-layout__full-screen-row application-layout__full-screen-row--containers">
    <div class="columns is-marginless" style="flex: 1;">
      <div class="column is-4 is-size-5" style="background: #c0392b; color: #fff;">
        Missed:&nbsp;&nbsp;
        <i class="fas fa-exclamation-circle"></i>&nbsp;&nbsp;
        <i class="fas fa-exclamation-circle"></i>&nbsp;&nbsp;
        <i class="fas fa-exclamation-circle"></i>&nbsp;&nbsp;
        <i class="fas fa-exclamation-circle"></i>
